@using SigniFormAPI.Models
@model ContractSummaryForm
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Contract Form</h2>
        <form method="post" asp-action="Submit">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="contractId" class="form-label">Contract ID</label>
                    <input asp-for="@Model.ContractId" type="text" class="form-control" id="contractId" required>
                </div>
                <div class="col-md-6">
                    <label for="contractDate" class="form-label">Contract Date</label>
                    <input asp-for="@Model.ContractDate" type="date" class="form-control" id="contractDate" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="initiatedPerson" class="form-label">Initiated Person</label>
                    <input asp-for="@Model.InitiatedPerson" type="text" class="form-control" id="initiatedPerson" required>
                </div>
                <div class="col-md-6">
                    <label for="relevantDirector" class="form-label">Relevant Director</label>
                    <input asp-for="@Model.RelevantDirector" type="text" class="form-control" id="relevantDirector" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="contractorName" class="form-label">Contractor Name</label>
                    <input asp-for="@Model.ContractorName" type="text" class="form-control" id="contractorName" required>
                </div>
                <div class="col-md-6">
                    <label for="contractorId" class="form-label">Contractor ID</label>
                    <input asp-for="@Model.ContractorId" type="text" class="form-control" id="contractorId" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="signeePosition" class="form-label">Signee Position</label>
                    <input asp-for="@Model.SigneePosition" type="text" class="form-control" id="signeePosition" required>
                </div>
                <div class="col-md-6">
                    <label for="signeeName" class="form-label">Signee Name</label>
                    <input asp-for="@Model.SigneeName" type="text" class="form-control" id="signeeName" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" type="email" class="form-control" id="email" required>
                </div>
                <div class="col-md-6">
                    <label for="iban" class="form-label">IBAN</label>
                    <input asp-for="@Model.Iban" type="text" class="form-control" id="iban" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="service" class="form-label">Service</label>
                    <input asp-for="@Model.Service" type="text" class="form-control" id="service" required>
                </div>
                <div class="col-md-6">
                    <label for="place" class="form-label">Place</label>
                    <input asp-for="@Model.Place" type="text" class="form-control" id="place" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="dedlineDate" class="form-label">Deadline Date</label>
                    <input asp-for="@Model.DedlineDate" type="date" class="form-control" id="dedlineDate" required>
                </div>
                <div class="col-md-6">
                    <label for="varPayer" class="form-label">Var Payer</label>
                    <input asp-for="@Model.VarPayer" type="text" class="form-control" id="varPayer" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="vatIncluded" class="form-label">VAT Included</label>
                    <input asp-for="@Model.VatIncluded" type="text" class="form-control" id="vatIncluded" required>
                </div>
                <div class="col-md-6">
                    <label for="details" class="form-label">Details</label>
                    <input asp-for="@Model.Details" type="text" class="form-control" id="details" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="amount" class="form-label">Amount</label>
                    <input asp-for="@Model.Amount" type="text" class="form-control" id="amount" required>
                </div>
                <div class="col-md-6">
                    <label for="paymentTerm" class="form-label">Payment Term</label>
                    <input asp-for="@Model.PaymentTerm" type="text" class="form-control" id="paymentTerm" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="paymentType" class="form-label">Payment Type</label>
                    <input asp-for="@Model.PaymentType" type="text" class="form-control" id="paymentType" required>
                </div>
                <div class="col-md-6">
                    <label for="validityPeriod" class="form-label">Validity Period</label>
                    <input asp-for="@Model.ValidityPeriod" type="text" class="form-control" id="validityPeriod" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="relevantDirectorEmail" class="form-label">Relevant Director Email</label>
                    <input asp-for="@Model.RelevantDirectorEmail" type="email" class="form-control" id="relevantDirectorEmail" required>
                </div>
                <div class="col-md-6">
                    <label for="legalEmail" class="form-label">Legal Email</label>
                    <input asp-for="@Model.LegalEmail" type="email" class="form-control" id="legalEmail" required>
                </div>
            </div>
            <button asp-action="Submit" type="submit" class="btn btn-primary">Submit</button>
            <button asp-action="Send" class="btn btn-primary">Send</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
